{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "target": "ES2020",
    "module": "ES2020",
    "strict": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "allowJs": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "noErrorTruncation": true
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "dist"
  ]
}
